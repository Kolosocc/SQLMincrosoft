<Window x:Class="DatabaseApp.SelectDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор базы данных" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите строку подключения:" Margin="0,0,0,5"/>
            <TextBox Name="DefaultConnectionStringTextBox" Margin="0,0,0,10"/>
            <Button Content="Подтвердить" Click="ConfirmButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
