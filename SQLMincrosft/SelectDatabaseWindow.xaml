<Window x:Class="DatabaseApp.SelectDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор базы данных" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите базу данных:" FontSize="14" Margin="0,0,0,10"/>

            <!-- Выпадающий список для выбора базы данных -->
            <ComboBox x:Name="DatabasesComboBox" Width="300" Height="30" Margin="0,0,0,20"/>

            <!-- Кнопка подтверждения -->
            <Button Content="Подтвердить" Click="ConfirmButton_Click" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
